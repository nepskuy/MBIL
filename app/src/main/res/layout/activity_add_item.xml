<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3147BD"
    tools:context=".AddItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#345597"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

        <EditText
            android:id="@+id/editTextItemId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Barang"
            android:textColor="#FFFFFF"
            android:textColorHint="#FDFDFD"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editTextItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Barang"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editTextItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/editTextItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:padding="12dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:srcCompat="@drawable/rectangle2" />

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/_20" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#345597"
            app:srcCompat="@drawable/rectangle2" />

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Gambar" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:srcCompat="@drawable/rectangle2" />

        <Button
            android:id="@+id/buttonAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Barang"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="377dp"
            android:layout_height="74dp"
            android:background="#345597"
            app:srcCompat="@drawable/rectangle1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBIL"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>