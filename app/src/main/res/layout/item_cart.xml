<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Gambar Item -->
    <ImageView
        android:id="@+id/imageViewCartItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <!-- Informasi Item -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 0"
            android:textSize="14sp"
            android:textColor="#345597" />

        <!-- Quantity Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/buttonDecreaseQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#E0E0E0"
                android:text="-"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="0dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textViewCartItemQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="#F5F5F5"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonIncreaseQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#E0E0E0"
                android:text="+"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="0dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tombol Remove -->
    <Button
        android:id="@+id/buttonRemoveItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="Remove"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
</LinearLayout>
